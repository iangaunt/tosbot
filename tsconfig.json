{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "ES5",
        "outDir": "dist",
        "rootDir": "src",

        "resolveJsonModule": true,
        "moduleDetection": "force",
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts",
    ]
}